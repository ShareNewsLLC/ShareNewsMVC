@model DAL.Models.Post

@{
    ViewBag.Title = "Create Post";
}
<br />
<div class="container">
    <ul class="nav-pills nav justify-content-center">
        <li><a class="nav-link" href="/Author">Active posts</a></li>
        <li><a class="nav-link" href="/Author/InactivePosts">Inactive posts</a></li>
        <li><a class="nav-link active" href="/Post/Create">Create post</a></li>
        <li><a class="nav-link" href="/Author/Profile">Profile</a></li>
        <li><a class="nav-link" href="/Auth/Logout">Log out</a></li>
    </ul>
</div>

<br />
@using (Html.BeginForm("Create", "Post", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    
    <div class="form-horizontal container" style="max-width: 800px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label for="CategoryId" class="control-label col-md-2">Category</label>
            <div class="col-md-10">
                <select name="CategoryId" id="CategoryId" class="form-control">
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="imageFile" class="control-label col-md-2">Picture</label>
            <div class="col-md-10">
                <input type="file" name="imageFile" id="imageFile" accept="image/*" class="form-control-file" />
            </div>
        </div>

        <div class="form-group">
            <label for="Article" class="control-label col-md-2">Article</label>
            <div class="col-md-10">
                <textarea name="Article" cols="86" rows="20" id="Article"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancel", "Index")
</div>
